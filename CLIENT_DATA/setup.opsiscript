defVar $LogLevel$
defVar $AppDir$
defVar $res$
defVar $ExitWith$
defVar $ReportMessage$

;-----------------------------------------------------------
; Init
;-----------------------------------------------------------
set $LogLevel$ = getProductProperty("log_level","default")
if ($LogLevel$ = "default") 
	set $LogLevel$ = "5"
endif
setLogLevel = $LogLevel$
