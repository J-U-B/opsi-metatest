comment "..repeat: [" + $AppDir$+ "]"


;-----------------------------------------------------------
; Test opsiServiceCall - set report
;-----------------------------------------------------------
[sub__test_setReport]
set $ExitWith$ = getProductProperty("exit_with", "")
set $ReportMessage$ = getProductProperty("report_message","")

set $res$ = currentProductSetReport("Temporary Message")

if $ReportMessage$ = ""
	Switch $ExitWith$
		Case "isSuccess"
			isSuccess
		EndCase
		Case "isFatalError"
			isFatalError
		EndCase
		Case "isSuspended"
			isSuspended
		EndCase
		Case "noUpdateScript"
			noUpdateScript
		EndCase
	EndSwitch
else
	sleepSeconds 3
	comment "Trying to exit with: [" + $ExitWith$ + "]"
	Switch $ExitWith$
		Case "isSuccess"
			isSuccess $ReportMessage$
		EndCase
		Case "isFatalError"
			isFatalError $ReportMessage$
		EndCase
		Case "isSuspended"
			isSuspended $ReportMessage$
		EndCase
		Case "noUpdateScript"
			noUpdateScript $ReportMessage$
		EndCase
	EndSwitch
endif
